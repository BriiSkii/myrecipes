<h1 align="center">Available Ingredients</h1>

<div align="center">
  <%= will_paginate %>
  <% @ingredients.each do |ing| %>
  <div>
    <div class="card card-outline mb-3 col-md-3">
      <div class="card-block">
        <h4 class="card-title">
          <%= link_to ing.name.capitalize, ingredient_path(ing) %>
        </h4>
        <h5 class="card-subtitle mb-2 text-muted">
          <small>
            <%= pluralize(ing.recipes.count, "recipe") if ing.recipes %>
          </small>
        </h5>
        <% if logged_in? && current_chef.admin? %>
        <div>
          <%= link_to "Edit", ingredient_path(ing), class: "btn btn-warning btn-sm" %>
        </div>
        <% end %>
      </div>
  </div>
  </div>
  <% end %>
  <%= will_paginate %>
</div>

<%= form_for(@ingredient, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Ingredient" %>
      </div>

      <div class="form-group">
        <%= f.submit(@ingredient.new_record? ? "Add Ingredient" : "Update Ingredient", class: 'btn btn-primary' )%>
      </div>
    </div>
  </div>
<% end %>

<div class="col-md-6 offset-4">
  [ <%= link_to "Cancel request and return to recipes listing", recipes_path %>]
</div>

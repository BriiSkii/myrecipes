<h1 class="center">Add a new recipe</h1>

<% if @recipe.errors.any? %>
  <div class="row error-style">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <strong>
          <%= pluralize(@recipe.errors.count, "error") %>
          prohibited this <%= @recipe.class %> from being saved:
        </strong>
        <div>
          <% @recipe.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </div>
      </div>
      </div>
    </div>
  </div>
<% end %>



<%= form_for(@recipe, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>

  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control', rows: 18 %>
      </div>

      <div class="form-group">
        <%= f.submit 'Save Recipe', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>



<% end %>
